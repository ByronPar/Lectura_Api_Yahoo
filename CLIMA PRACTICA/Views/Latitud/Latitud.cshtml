@{
    ViewData["Title"] = "Privacy Policy";
    @model CLIMA_PRACTICA.Models.LatitudLon

}


<div>
            @using (Html.BeginForm())
            {
        <div class="form-group">
            <label for="exampleInputPassword1">Latitud</label>
            @Html.TextBoxFor(lat => lat.lat)
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Longitud</label>
            @Html.TextBoxFor(x => x.lon)
        </div> 
                <button type="submit" class="btn btn-secondary" onclick="">Obtener Datos</button>
            }

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Temperatura:
        </dt>
        <dd class="col-sm-10" id="1">
            @Model.temperatura  °C
        </dd>
        <dt class="col-sm-2">
            Humedad:
        </dt>
        <dd class="col-sm-10" id="2">
            @Model.humedad  %
        </dd>
        <dt class="col-sm-2">
            Presion:
        </dt>
        <dd class="col-sm-10" id="3">
            @Model.presion  millibars
        </dd>
        <dt class="col-sm-2">
            Dirección del viento:
        </dt>
        <dd class="col-sm-10" id="4">
            @Model.direccion°   grados desde el norte
        </dd>
        <dt class="col-sm-2">
            Velocidad del viento:
        </dt>
        <dd class="col-sm-10" id="5">
            @Model.velocidad km/h
        </dd>
    </dl>
</div>
